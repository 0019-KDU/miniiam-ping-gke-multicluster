###############################################################################
# Ping Identity IAM Lab - Environment Variables
# Copy this file to .env and fill in your values
###############################################################################

#=============================================================================
# Ping Identity DevOps Program (Required for license)
# Sign up at: https://devops.pingidentity.com/get-started/devopsRegistration/
#=============================================================================
PING_IDENTITY_ACCEPT_EULA=YES
PING_IDENTITY_DEVOPS_USER=your_email@example.com
PING_IDENTITY_DEVOPS_KEY=your_devops_key_here

#=============================================================================
# PingDirectory Configuration
#=============================================================================
PD_ROOT_USER_DN=cn=administrator
# Password is stored in secrets/pd_root_password.txt
USER_BASE_DN=dc=example,dc=com

# Optional: Server Profile URL for automated provisioning
PD_SERVER_PROFILE_URL=
PD_SERVER_PROFILE_PATH=

#=============================================================================
# PingFederate Configuration
#=============================================================================
PF_ADMIN_PUBLIC_HOSTNAME=localhost
PF_ENGINE_PUBLIC_HOSTNAME=localhost
PF_OPERATIONAL_MODE=STANDALONE
PF_LOG_LEVEL=INFO

# Optional: Server Profile URL for automated provisioning
PF_SERVER_PROFILE_URL=
PF_SERVER_PROFILE_PATH=

#=============================================================================
# PingAccess Configuration
#=============================================================================
PA_ADMIN_PUBLIC_HOSTNAME=localhost
PA_OPERATIONAL_MODE=STANDALONE
PA_RUNTIME_URL=http://localhost:3000

# Optional: Server Profile URL for automated provisioning
PA_SERVER_PROFILE_URL=
PA_SERVER_PROFILE_PATH=

#=============================================================================
# Backend API Configuration
#=============================================================================
# Comma-separated list of trusted token issuers
TRUSTED_ISSUERS=https://localhost:9031,https://pingfederate:9031
JWT_AUDIENCE=react-app
API_LOG_LEVEL=info

#=============================================================================
# Application URLs (for CORS/redirect configuration)
#=============================================================================
APP_BASE_URL=http://localhost:3000
REACT_APP_URL=http://localhost:5173
